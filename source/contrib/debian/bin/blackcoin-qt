#!/bin/sh

set -e

umask 077

basedir=~/.nexbit
dbfile="$basedir/DB_CONFIG"
cfgfile="$basedir/nexbit.conf"

[ -e "$basedir" ] || mkdir "$basedir"

# Nexbit does not clean up DB log files by default
[ -e "$dbfile" ] || echo 'set_flags DB_LOG_AUTOREMOVE' > "$dbfile"

exec /usr/lib/nexbit/nexbit-qt "$@"
