#!/bin/sh

set -e

umask 077

basedir=~/.nexbitcoin
dbfile="$basedir/DB_CONFIG"
cfgfile="$basedir/nexbitcoin.conf"

[ -e "$basedir" ] || mkdir "$basedir"

# NexbitCoin does not clean up DB log files by default
[ -e "$dbfile" ] || echo 'set_flags DB_LOG_AUTOREMOVE' > "$dbfile"

exec /usr/lib/nexbitcoin/nexbitcoin-qt "$@"
